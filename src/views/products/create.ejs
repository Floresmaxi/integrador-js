<%- include("../partials/head") %> 
<body class="">
  <%- include("../partials/nav") %> 
  <div class="container product-wrapper p-4">
    <div class="row">
			<div class="col-12 my-4">
				<h3 class="products-title">Formulario de creación de productos</h3>
			</div>
		</div>
    <div class="container border border-darck bg-light p-4 col-12">
      <form action="../products/create" method="POST" enctype="multipart/form-data">
        <div class="row product-detail">
          <div class="col-12 col-md-6">
            <label for="name" class="form-label">Nombre del producto:</label>
            <input type="text" id="name" name="name" placeholder="Ej: Zapatillas Reebok" class="form-input" value="">
          </div>
          <div class="col-12 col-md-6">
            <label for="price" class=" form-label">Precio del producto:</label>
            <input type="text" id="price" name="price" placeholder="Ej: $5678" class="form-input" value="">
          </div>
          <div class="col-12 col-md-6">
            <label for="discount" class="form-label">Marca:</label>
            <input type="text" id="discount" name="brand" placeholder="Ej: Philips" class="form-input" value="">
          </div>
          <div class="col-12 col-md-6">
            <label for="price" class="form-label">Descripción:</label>
            <textarea type="text" id="description" name="description" placeholder="Ej: ..." class="form-input" value=""></textarea>
          </div>
          <div class="col-12 col-md-6 ">
            <label for="imag" class="form-label">Agregar imagen:</label>
            <input type="file" id="imag" name="imag" class="form-control" aria-label="file example" required>
          <div class="invalid-feedback">Example invalid form file feedback</div>
          </div>
          <div class="col-12 py-4">
            <button class="btn btn-primary text-light btn-outline-info" type="submit">Guardar producto</button>
          </div>
        </div>
      </form>
      <div class="mb-3"></div>
    </div>
   </div>
  <%- include("../partials/footer") %> 
</body>
</html>